# secure .htaccess file
<Files .htaccess>
 order allow,deny
 deny from all
</Files>

# EE 404 page for missing pages
ErrorDocument 404 /index.php/site/error

# Simple 404 for missing files
<FilesMatch "(\.jpe?g|gif|png|bmp|css|js|flv)$">
  ErrorDocument 404 "File Not Found"
</FilesMatch>

RewriteEngine On
RewriteBase /

# remove the www
# RewriteCond %{HTTP_HOST} ^www.iamsteve.me
# RewriteRule ^(.*)$ /index.php/$1 [R=301,L]

# Remove the trailing slash to paths without an extension
RewriteCond %{REQUEST_URI} /$
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ $1 [L,R=301]

# Remove index.php
# Uses the "include method"
# http://expressionengine.com/wiki/Remove_index.php_From_URLs/#Include_List_Method
RewriteCond %{QUERY_STRING} !^(ACT=.*)$ [NC]
RewriteCond %{REQUEST_URI} !(\.[a-zA-Z0-9]{1,5})$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/ee/(site|blog|include|portfolio|downloads|search|add|P[0-9]{2,8}) [NC]
RewriteRule (.*) /ee/index.php/$1 [L,R=301]

# -- NSM .htaccess Generator End --